extend bootstrap

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") 
          span
            img.image.logo_img_small( src="/ONR_Logo.jpg" )
          span &ensp;
          span #{title}
      .collapse.navbar-collapse#navbar
        ul.nav.navbar-nav
          if user.instructor
            li.active: a(href="#scenarios" data-toggle="tab") Scenarios
            li: a(href="#sessions" data-toggle="tab") Sessions
            li: a(href="#review" data-toggle="tab") Review
        form.navbar-form.navbar-right(method="post" action="/logout")
          button.btn.btn-link(type="submit") Logout
        -
          name =
            ( user.last_name || "" ) + ( user.last_name && ( user.first_name || user.middle_initial ) ? ", " : "" )  +
            ( user.first_name || "" ) + ( user.first_name && user.middle_initial ? " " : "" )  +
            ( user.middle_initial || "" ) + ( user.middle_initial ? "." : "" )
        p.navbar-text.navbar-right= name
  .tab-content
    if user.instructor
      .tab-pane.active#scenarios(role="tabpanel")
        block scenarios
      .tab-pane#sessions(role="tabpanel")
        block sessions
      .tab-pane#review(role="tabpanel")
        block review
    else
      .tab-pane.active#sessions(role="tabpanel")
        block sessions
